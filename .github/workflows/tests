name: Run Tests

on:
  push:
  pull_request:

permissions:
  contents: read    # يمنح صلاحية قراءة الريبو
  actions: read     # صلاحية تشغيل الإجراءات فقط

jobs:
  tests:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      - name: Install dependencies
        run: npm ci

      - name: Run tests
        run: npm test
